        "mockery/mockery": "^0.9.4",
        "fabpot/goutte": "~1.0",
        "guzzle/http": "dev-master as 3.9.2",
        "guzzle/plugin-cookie": "^3.9",
        "guzzle/plugin-cache": "^3.9",
        "doctrine/common": "^2.5"
